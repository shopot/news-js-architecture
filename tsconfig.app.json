{
  "baseUrl": "./",
  "target": "ESNext",
  "lib": [
    "DOM",
    "DOM.Iterable",
    "ESNext",
    "WebWorker"
  ],
  "module": "ESNext",
  "skipLibCheck": true,
  /* Bundler mode */
  "moduleResolution": "Node",
  "allowSyntheticDefaultImports": true,
  "allowImportingTsExtensions": true,
  "resolveJsonModule": true,
  "isolatedModules": true,
  "noEmit": true,
  /* Linting */
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true,
  "include": [
    "env.d.ts",
    "src",
    "src/**/*.json"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "removeComments": true,
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vite/client"
    ]
  }
}
